{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../node_modules/*"]
    },
    "typeRoots": [
      "./types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    ".",
    "../../node_modules/argo-ui/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../../node_modules/argo-ui/src/**/*.test.ts",
    "../../node_modules/argo-ui/src/**/*.test.tsx"
  ]
} 